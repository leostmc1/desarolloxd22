<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ui.gallery.GalleryFragment">

    <Button
        android:id="@+id/botonhospital"
    android:layout_width="300dp"
    android:layout_height="130dp"
    android:text="Hospitales"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.495"
    android:background="@drawable/ic_bottoncerrar"
    android:textSize="25dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.064"></Button>

    <Button
        android:id="@+id/botonclinicas"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:text="Clinicas"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_bottoncerrar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405"></Button>

    <Button
        android:id="@+id/botonpostas"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:text="Postas"
        android:background="@drawable/ic_bottoncerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>